<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thecoders.drplus.drplus.Main2Activity">

    <ImageView
        android:id="@+id/list_icon"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/img22"
        android:layout_width="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/list_numtel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Num TEl:20202023/74523519"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="20sp"
        android:layout_below="@+id/list_pay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/list_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Pay:Sfax"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="20sp"
        android:layout_below="@+id/list_specialite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/list_docteur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Docteur Med Chabouni"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="20sp"
        android:layout_below="@+id/list_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Render-Vous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="0dp" />

    <TextView
        android:id="@+id/list_specialite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="SpecialitÃ©: medcine dentaire"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/list_docteur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
